@inproceedings{10.1145/2467307.2467316,
	author = {Taromirad, Masoumeh and Paige, Richard F.},
	title = {Agile Requirements Traceability Using Domain-Specific Modelling Languages},
	year = {2012},
	isbn = {9781450318044},
